<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>br.com.professorisidro.temspotify.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NovoUsuarioServlet</servlet-name>
        <servlet-class>br.com.professorisidro.temspotify.controller.NovoUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EfetivaCadastroServlet</servlet-name>
        <servlet-class>br.com.professorisidro.temspotify.controller.EfetivaCadastroServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NovaPlaylistServlet</servlet-name>
        <servlet-class>br.com.professorisidro.temspotify.controller.NovaPlaylistServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EfetivaPlaylistServlet</servlet-name>
        <servlet-class>br.com.professorisidro.temspotify.controller.EfetivaPlaylistServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlaylistsServlet</servlet-name>
        <servlet-class>br.com.professorisidro.temspotify.controller.PlaylistsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NovaMusicaServlet</servlet-name>
        <servlet-class>br.com.professorisidro.temspotify.controller.NovaMusicaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadMusicaServlet</servlet-name>
        <servlet-class>br.com.professorisidro.temspotify.controller.UploadMusicaServlet</servlet-class>
        <multipart-config>
            <max-file-size>20848820</max-file-size>
            <max-request-size>418018841</max-request-size>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>PlaylistDetailsServlet</servlet-name>
        <servlet-class>br.com.professorisidro.temspotify.controller.PlaylistDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RecuperaMusicasServlet</servlet-name>
        <servlet-class>br.com.professorisidro.temspotify.controller.RecuperaMusicasServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IncluirNaPlaylistServlet</servlet-name>
        <servlet-class>br.com.professorisidro.temspotify.controller.IncluirNaPlaylistServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlayerServlet</servlet-name>
        <servlet-class>br.com.professorisidro.temspotify.controller.PlayerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NovoUsuarioServlet</servlet-name>
        <url-pattern>/novousuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EfetivaCadastroServlet</servlet-name>
        <url-pattern>/efetivacadastro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NovaPlaylistServlet</servlet-name>
        <url-pattern>/novaplaylist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EfetivaPlaylistServlet</servlet-name>
        <url-pattern>/efetivaplaylist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlaylistsServlet</servlet-name>
        <url-pattern>/playlists</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NovaMusicaServlet</servlet-name>
        <url-pattern>/novamusica</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadMusicaServlet</servlet-name>
        <url-pattern>/uploadmusica</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlaylistDetailsServlet</servlet-name>
        <url-pattern>/playlistdetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RecuperaMusicasServlet</servlet-name>
        <url-pattern>/recuperamusicas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IncluirNaPlaylistServlet</servlet-name>
        <url-pattern>/incluirnaplaylist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlayerServlet</servlet-name>
        <url-pattern>/player</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
